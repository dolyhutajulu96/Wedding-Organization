rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is the specific admin
    // Ganti 'hello@asterandco.com' dengan email login Anda di Firebase Auth
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == 'hello@asterandco.com' || 
        request.auth.token.email_verified == true // Optional: trust all verified emails if needed
      );
    }

    // PUBLIC READ: Portfolio, Packages, Testimonials, Site Content, Settings, Blogs
    // WRITE: Only Admin
    match /projects/{document=**} { 
      allow read: if true; 
      allow write: if isAdmin(); 
    }
    match /packages/{document=**} { 
      allow read: if true; 
      allow write: if isAdmin(); 
    }
    match /testimonials/{document=**} { 
      allow read: if true; 
      allow write: if isAdmin(); 
    }
    match /site_content/{document=**} { 
      allow read: if true; 
      allow write: if isAdmin(); 
    }
    match /settings/{document=**} { 
      allow read: if true; 
      allow write: if isAdmin(); 
    }
    match /blogs/{document=**} { 
      allow read: if true; 
      allow write: if isAdmin(); 
    }
    
    // INQUIRIES: 
    // Public can CREATE (submit form)
    // Only Admin can READ/UPDATE/DELETE
    match /inquiries/{inquiryId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
  }
}