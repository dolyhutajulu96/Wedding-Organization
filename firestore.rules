rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin (authenticated)
    function isAdmin() {
      return request.auth != null;
    }

    // PUBLIC READ: Portfolio, Packages, Testimonials, Site Content, Settings, Blogs
    // WRITE: Only Admin
    match /projects/{document=**} { 
      allow read: if true; 
      allow write: if isAdmin(); 
    }
    match /packages/{document=**} { 
      allow read: if true; 
      allow write: if isAdmin(); 
    }
    match /testimonials/{document=**} { 
      allow read: if true; 
      allow write: if isAdmin(); 
    }
    match /site_content/{document=**} { 
      allow read: if true; 
      allow write: if isAdmin(); 
    }
    match /settings/{document=**} { 
      allow read: if true; 
      allow write: if isAdmin(); 
    }
    match /blogs/{document=**} { 
      allow read: if true; 
      allow write: if isAdmin(); 
    }
    
    // INQUIRIES: 
    // Public can CREATE (submit form)
    // Only Admin can READ/UPDATE/DELETE
    match /inquiries/{inquiryId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
  }
}